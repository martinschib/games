{
  "name": "gamespage",
  "version": "1.0.0",
  "main": "index.js",
  "license": "MIT",
  "scripts": {
    "build": "esbuild ./src/index.ts --bundle --outfile=./public/out.js",
    "dev:js": "esbuild ./src/index.ts --bundle --outfile=./public/out.js --watch",
    "dev:css": "npx tailwindcss -i ./src/input.css -o ./public/out.css --watch",
    "dev": "concurrently --kill-others \"yarn dev:js\" \"yarn dev:css\""
  },
  "dependencies": {
    "esbuild": "^0.14.47"
  },
  "devDependencies": {
    "tailwindcss": "^3.1.4"
  }
}
